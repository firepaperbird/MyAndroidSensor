<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List all Sensor"
        android:id="@+id/btListAll"
        android:onClick="clickToListAll"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Barometer Sensor"
        android:id="@+id/btBaro"
        android:onClick="clickToBaro"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compass Sensor"
        android:id="@+id/btCompass"
        android:onClick="clickToCompass"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Light Sensor"
        android:id="@+id/btLight"
        android:onClick="clickToLight"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Heart rate Sensor"
        android:id="@+id/btHRM"
        android:onClick="clickToHearRate"/>

</LinearLayout>